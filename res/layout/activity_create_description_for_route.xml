<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ScrollView
        android:id="@+id/scrollerPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:background="@drawable/tlo" >

	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_horizontal"
	        android:orientation="vertical" >

	        <TextView
	            android:id="@+id/textView1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="5dp"
	            android:layout_marginBottom="5dp"
	            android:layout_marginLeft="10dp"
	            android:layout_marginRight="10dp"
	            android:textStyle="bold"
	            android:text="Nazwa trasy:"
	            android:textAppearance="?android:attr/textAppearanceLarge" />

	        <EditText
	            android:id="@+id/newRouteName"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content" 
	            android:layout_marginTop="5dp"
	            android:layout_marginBottom="5dp"
	            android:layout_marginLeft="10dp"
	            android:layout_marginRight="10dp">

	            <requestFocus />
	        </EditText>

	        <TextView
	            android:id="@+id/textView3"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="5dp"
	            android:layout_marginBottom="5dp"
	            android:layout_marginLeft="10dp"
	            android:layout_marginRight="10dp"
	            android:textStyle="bold"
	            android:text="Początek trasy:"
	            android:textAppearance="?android:attr/textAppearanceLarge" />

	        <EditText
	            android:id="@+id/newRouteStart"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="5dp"
	            android:layout_marginBottom="5dp"
	            android:layout_marginLeft="10dp"
	            android:layout_marginRight="10dp"
	            android:ems="10" />

	        <TextView
	            android:id="@+id/textView4"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="5dp"
	            android:layout_marginBottom="5dp"
	            android:layout_marginLeft="10dp"
	            android:layout_marginRight="10dp"
	            android:textStyle="bold"
	            android:text="Koniec trasy:"
	            android:textAppearance="?android:attr/textAppearanceLarge" />

	        <EditText
	            android:id="@+id/newRouteEnd"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="5dp"
	            android:layout_marginBottom="5dp"
	            android:layout_marginLeft="10dp"
	            android:layout_marginRight="10dp"
	            android:ems="10" />

	        <TextView
	            android:id="@+id/textView5"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="5dp"
	            android:layout_marginBottom="5dp"
	            android:layout_marginLeft="10dp"
	            android:layout_marginRight="10dp"
	            android:textStyle="bold"
	            android:text="Kolor oznaczeń trasy:"
	            android:textAppearance="?android:attr/textAppearanceLarge" />

	        <EditText
	            android:id="@+id/newRouteColor"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="5dp"
	            android:layout_marginBottom="5dp"
	            android:layout_marginLeft="10dp"
	            android:layout_marginRight="10dp"
	            android:ems="10" />

	        <TextView
	            android:id="@+id/textView6"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="5dp"
	            android:layout_marginBottom="5dp"
	            android:layout_marginLeft="10dp"
	            android:layout_marginRight="10dp"
	            android:textStyle="bold"
	            android:text="Długość trasy:"
	            android:textAppearance="?android:attr/textAppearanceLarge" />

	        <EditText
	            android:id="@+id/newRouteDistance"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="5dp"
	            android:layout_marginBottom="5dp"
	            android:layout_marginLeft="10dp"
	            android:layout_marginRight="10dp"
	            android:ems="10" />

	        <TextView
	            android:id="@+id/textView7"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="5dp"
	            android:layout_marginBottom="5dp"
	            android:layout_marginLeft="10dp"
	            android:layout_marginRight="10dp"
	            android:textStyle="bold"
	            android:text="Przebieg trasy:"
	            android:textAppearance="?android:attr/textAppearanceLarge" />

	        <EditText
	            android:id="@+id/newRouteWay"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="5dp"
	            android:layout_marginBottom="5dp"
	            android:layout_marginLeft="10dp"
	            android:layout_marginRight="10dp"
	            android:ems="10"
	            android:inputType="textMultiLine" />

	        <TextView
	            android:id="@+id/textView8"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="5dp"
	            android:layout_marginBottom="5dp"
	            android:layout_marginLeft="10dp"
	            android:layout_marginRight="10dp"
	            android:textStyle="bold"
	            android:text="Opis trasy:"
	            android:textAppearance="?android:attr/textAppearanceLarge" />

	        <EditText
	            android:id="@+id/newRouteDescription"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="5dp"
	            android:layout_marginBottom="5dp"
	            android:layout_marginLeft="10dp"
	            android:layout_marginRight="10dp"
	            android:ems="10"
	            android:inputType="textMultiLine" />

	        <Button
	            android:id="@+id/btnNewRoute"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center"
	            android:layout_marginBottom="15dp"
	            android:text="Zapisz trasę" />
	        
	    </LinearLayout>
    
    </ScrollView>

</FrameLayout>